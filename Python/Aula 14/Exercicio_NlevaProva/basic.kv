#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'
    Label:
        id: value
        text: '0'
        text_size: self.size
        halign: 'right'
        valign: 'middle'
    GridLayout:
        id: grid
        cols: 4
        rows: 4

        Button:
            id: nine
            text:'9'
            on_press: root.changelb(self.text)

        Button:
            id: eight
            text:'8'
            on_press: root.changelb(self.text)

        Button:
            id: seven
            text:'7'
            on_press: root.changelb(self.text)

        Button:
            id: divide
            text:'/'
            on_press: root.changelb(self.text)

        Button:
            id: six
            text:'6'
            on_press: root.changelb(self.text)

        Button:
            id: five
            text:'5'
            on_press: root.changelb(self.text)

        Button:
            id: four
            text:'4'
            on_press: root.changelb(self.text)

        Button:
            id: multiply
            text:'*'
            on_press: root.changelb(self.text)

        Button:
            id: three
            text:'3'
            on_press: root.changelb(self.text)

        Button:
            id: two
            text:'2'
            on_press: root.changelb(self.text)

        Button:
            id: one
            text:'1'
            on_press: root.changelb(self.text)

        Button:
            id: minus
            text:'-'
            on_press: root.changelb(self.text)

        Button:
            id: clear
            text:'C'
            on_press: root.clear()

        Button:
            id: zero
            text:'0'
            on_press: root.changelb(self.text)

        Button:
            id: delete
            text:'DEL'
            on_press: root.delete()

        Button:
            id: sum
            text:'+' 
            on_press: root.changelb(self.text)
    BoxLayout:
        orientation: 'horizontal'
        id: final
        Button:
            id: equal
            size_hint: 0.8,1
            text: '='
            on_press: root.equal()
        Button:
            id: point
            size_hint: 0.2,1
            text:'.'
            on_press: root.changelb(self.text)